<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
    <Label text="Add Expense" style="-fx-font-size: 20px;" />
    <TextField fx:id="amountField" promptText="Amount" />
    <ComboBox fx:id="paidByDropdown" promptText="Paid By" />
    <ComboBox fx:id="splitTypeDropdown" promptText="Split Type" />
    <Button text="Submit" onAction="#handleSubmitExpense" />
</VBox>
